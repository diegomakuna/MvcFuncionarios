@model IEnumerable<MvcFuncionarios.Models.Departamento>

@{
    ViewBag.Title = "Index";
}

<h2>Departamentos</h2>

<p>
    <a class="btn-floating btn-large waves-effect waves-light red"><i class="mdi-content-add"></i></a>
    @Html.ActionLink("Adicionar novo departamento", "Create")
</p>
<table class="table">
    <tr>
        <th data-field="Nome">
            Nome do Departamento
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            Ações
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Departamentos", new { id = item.Id })"><i class="mdi-file-cloud "></i> Editar |</a>
                <a href="@Url.Action("Delete", "Departamentos", new { id = item.Id })"><i class="mdi-file-cloud "></i> Deletar</a>
            </td>
        </tr>
    }

</table>
