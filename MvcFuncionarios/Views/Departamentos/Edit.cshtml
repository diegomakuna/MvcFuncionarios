@model MvcFuncionarios.Models.Departamento

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm("Edit", "Departamentos", FormMethod.Post, new { @class = "form-horizontal", @id = "dpEdit" }))
{   
  @Html.AntiForgeryToken()


   
       

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label for="inputNome" class="col-sm-2 control-label">Nome</label>
            <div class="col-sm-10">
                <input type="text" name="Nome" value="@Model.Nome" class="form-control required">
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(x => x.Status, new { @checked = "checked" }) Status
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="Editar" />
            </div>
            </div>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
